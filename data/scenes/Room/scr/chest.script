#include "scripts\base.inc"

on "LeftClick" 
{
	if(actor.shoes == true) {
		actor.talk("J'espère qui ne comptera pas trop chère pour sa serrure.");
	} else if(this.open) {
		actor.shoes = true;
		actor.Talk("J'ai mis mes chaussures.");
	} else {
		actor.Talk("C'est fermé. J'ai rangé la clé sous mon oreiller");
	}
}

on "book" {
	Game.Interactive = false;
	actor.Talk("C'est quelle clé déjà... celle là ? Ah non... celle-ci ?");
	actor.Talk("Tu vas t'ouvrir oui ? *bim*");
	actor.Talk("Bon. Je dois une serrure à l'aubergiste.");
	Game.Interactive = true;
	Game.SelectedItem = null;
	Game.DropItem("book");
	this.open = true;

}